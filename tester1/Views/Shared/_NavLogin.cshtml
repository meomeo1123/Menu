
@using System.Web
@using Microsoft.AspNet.Identity

@if (HttpContext.Current.User.Identity.IsAuthenticated)
{
    <div class="head-top">
        <div class="grid wide">
            <ul class="login">
                <li>
                    <a href="/Account/LogOff">
                        <i class="fa-solid fa-user"></i>
                        Đăng Xuất
                    </a>
                <li>|</li>
                <li>
                    <a href="/User/Index">
                        <i class="fa-solid fa-user"></i>
                        Tài khoản của tôi
                    </a>
                </li>
                <li>|</li>
                <li>
                    <a href="/AddCart/index">
                        <i class="fa-solid fa-cart-shopping"></i>
                        Giỏ hàng
                        <span id="cartItemCount">@Html.Action("BagCart", "AddCart")</span>
                    </a>
                </li>
            </ul>
            <p><i class="fa-solid fa-phone"></i>Liên hệ : 03214838747832</p>
        </div>
    </div>

}
else
{
    <div class="head-top">
        <div class="grid wide">
            <ul class="login">
                <li>
                    <a href="/Account/Login">
                        <i class="fa-solid fa-user"></i>
                        Đăng nhập
                    </a>
                <li>|</li>
                <li>
                    <a href="/Account/Register">
                        <i class="fa-solid fa-user"></i>
                        Đăng kí
                    </a>
                </li>
                <li>|</li>
                <li>
                    <a href="/AddCart/index">
                        <i class="fa-solid fa-cart-shopping"></i>
                        Giỏ hàng
                        <span id="cartItemCount">@Html.Action("BagCart", "AddCart")</span>
                    </a>
                </li>
            </ul>
            <p><i class="fa-solid fa-phone"></i>Liên hệ : 03214838747832</p>
        </div>
    </div>

}